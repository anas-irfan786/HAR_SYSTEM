@page "/FeedBack"



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback - HAR System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/Feedback.css" rel="stylesheet" />
</head>
<body>

    <!-- Header Section -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark top-fixed text-light">
            <div class="container">
                <a class="navbar-brand" href="/home">
                    <img src="/img/logo.png" alt="logo" width="30" height="24" class="d-inline-block align-top" style="border-radius: 15px; margin-right: 8px;">
                    <span style="font-weight: bold; font-family: 'Arial Black', Arial, sans-serif;">HAR System</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="/Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/aboutus">About Us</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Logout</a></li>
                    </ul>
                    <input type="text" id="searchBox" placeholder="Search for feedback..." class="form-control" style="width: 50%" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Feedback Section -->
    <section class="feedback-section">
        <h2>Provide Feedback on Activity Classification</h2>
        <p>Your feedback helps us improve the accuracy of activity classification. Please share your thoughts or update any previous feedback.</p>

        <!-- Feedback Form -->
        <div class="feedback-form">
            <textarea placeholder="Enter your feedback here..."></textarea>
            <button type="submit">Submit Feedback</button>
        </div>

        <!-- Previous Feedback Section -->
        <div class="previous-feedback-section">
            <h3>Your Previous Feedback</h3>
            <div class="feedback-item">
                <p><strong>Activity:</strong> Walking</p>
                <p><strong>Feedback:</strong> The walking activity was classified correctly, but the duration seemed slightly off. It could be more precise.</p>
            </div>
            <div class="feedback-item">
                <p><strong>Activity:</strong> Running</p>
                <p><strong>Feedback:</strong> Great classification! The activity was recognized quickly, and the duration matched my tracking device.</p>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
<footer>
    &copy; 2024 HAR System. All Rights Reserved.
</footer>
</html>
