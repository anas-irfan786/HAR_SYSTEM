        <a href="#" class="generate-report-btn" id="generateReportBtn">Generate Report</a>

        <!-- Export Buttons -->
        <div class="export-btns">
            <button id="exportPdfBtn">Export as PDF</button>
            <button id="exportExcelBtn">Export as Excel</button>
        </div>

