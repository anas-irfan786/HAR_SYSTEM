@page "/History"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activity History - HAR System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/History.css" rel="stylesheet" />
</head>
<body>

    <!-- Header Section -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark top-fixed text-light">
            <div class="container">
                <a class="navbar-brand" href="/home">
                    <img src="/img/logo.png" alt="logo" width="30" height="24" class="d-inline-block align-top" style="border-radius: 15px; margin-right: 8px;">
                    <span style="font-weight: bold; font-family: 'Arial Black', Arial, sans-serif;">HAR System</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="/Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/aboutus">About Us</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Logout</a></li>
                    </ul>
                    <input type="text" id="searchBox" placeholder="Search for activities..." class="form-control" style="width: 50%" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Activity History Section -->
    <section class="history-section">
        <h2>Activity History</h2>
        <p>This page allows you to visualize historical activity data. Use the filters below to explore activity data by date and type.</p>

        <!-- Filter Section -->
        <div class="filter-container">
            <select id="activityTypeFilter">
                <option value="">Select Activity Type</option>
                <option value="walking">Walking</option>
                <option value="running">Running</option>
                <option value="sitting">Sitting</option>
                <option value="standing">Standing</option>
            </select>

            <input type="date" id="startDate" placeholder="Start Date">
            <input type="date" id="endDate" placeholder="End Date">
            <button class="btn btn-primary" id="applyFiltersBtn">Apply Filters</button>
        </div>

        <!-- Placeholder for Activity History Visualization (Chart/Graph) -->
        <div class="history-data-container">
            <div class="history-chart" id="chart">
                <img src="/img/human-activity-chart.png" alt="Activity History Chart" style="width: 100%; height: auto; max-height: 400px; border-radius: 8px;">
            </div>
            <p>No data available for the selected filters.</p>

            <!-- Sample Data Section (for demonstration) -->
            <div class="history-item">
                <p><strong>Activity Type:</strong> Walking</p>
                <p><strong>Date:</strong> 2024-11-20</p>
                <p><strong>Duration:</strong> 30 minutes</p>
            </div>
            <div class="history-item">
                <p><strong>Activity Type:</strong> Running</p>
                <p><strong>Date:</strong> 2024-11-19</p>
                <p><strong>Duration:</strong> 45 minutes</p>
            </div>
            <!-- More data items can be added dynamically -->
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <script>
        // JavaScript to handle filter functionality
        const applyFiltersBtn = document.getElementById('applyFiltersBtn');
        const activityTypeFilter = document.getElementById('activityTypeFilter');
        const startDate = document.getElementById('startDate');
        const endDate = document.getElementById('endDate');
        const historyContainer = document.querySelector('.history-data-container');

        applyFiltersBtn.addEventListener('click', () => {
            const activityType = activityTypeFilter.value;
            const start = startDate.value;
            const end = endDate.value;

            // Filter and display data accordingly (for demonstration)
            console.log(`Applying filters - Activity: ${activityType}, Start Date: ${start}, End Date: ${end}`);

            // Clear existing history items and update with new filtered data
            historyContainer.innerHTML = '<div class="history-chart" id="chart"></div>';

            // Add filtered activity data here dynamically, currently it's just a sample.
            historyContainer.innerHTML += `
                <div class="history-item">
                    <p><strong>Activity Type:</strong> ${activityType}</p>
                    <p><strong>Date:</strong> ${start}</p>
                    <p><strong>Duration:</strong> 30 minutes</p>
                </div>
            `;
        });
    </script>
</body>
<footer>
    &copy; 2024 HAR System. All Rights Reserved.
</footer>
</html>
