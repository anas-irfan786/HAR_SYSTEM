@page "/ErrorMaintain"

    
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Error - HAR System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/Error_Maintain.css">
</head>

<body>
    <!-- Error and Maintenance Page Section -->
    <section class="error-page-container">
        <div class="error-page-content">
            <h2 class="text-center">Oops! Something Went Wrong</h2>
            <p class="text-center">We are experiencing some technical difficulties. Please try again later.</p>

            <!-- Error Icon -->
            <div class="error-icon text-center">
                <img src="https://img.icons8.com/ios/452/error.png" alt="error-icon" class="img-fluid">
            </div>

            <!-- System Status -->
            <div class="status-section">
                <h3>System Status</h3>
                <p>We are aware of the issue and are working on a solution. Please refer to the information below to get more details on the status:</p>
                <ul>
                    <li><strong>System Online:</strong> No</li>
                    <li><strong>Current Issue:</strong> Server Timeout</li>
                    <li><strong>Last Update:</strong> 20 minutes ago</li>
                </ul>
            </div>

            <!-- Troubleshooting Tips -->
            <div class="troubleshooting-section">
                <h3>Troubleshooting</h3>
                <p>If you are experiencing this issue, please try the following steps:</p>
                <ul>
                    <li>Refresh the page after a few minutes.</li>
                    <li>Check your internet connection.</li>
                    <li>Clear your browser cache and try again.</li>
                    <li>Try accessing the site from a different browser or device.</li>
                </ul>
            </div>

            <!-- Contact Support Section -->
            <div class="contact-support-section text-center">
                <h4>If the problem persists, please contact support:</h4>
                <a href="mailto:support@harsystem.com" class="btn btn-warning">Contact Support</a>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
